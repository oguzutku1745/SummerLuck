name: Create Custom Raffle

on:
  workflow_dispatch:
    inputs:
      casterName:
        description: 'Farcaster Name'
        required: true
      raffleAddress:
        description: 'Raffle Contract Address'
        required: true

jobs:
  create-raffle:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Set up Node.js
        uses: actions/setup-node@v2
        with:
          node-version: '14'

      - name: Install dependencies
        run: npm install

      - name: Run createCustomRaffle script
        run: node createCustomRaffle.js ${{ github.event.inputs.casterName }} ${{ github.event.inputs.raffleAddress }}

      - name: Commit and push changes
        run: |
          git config --global user.name 'github-actions[bot]'
          git config --global user.email 'github-actions[bot]@users.noreply.github.com'
          git add .
          git commit -m "Add custom raffle"
          git push
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
